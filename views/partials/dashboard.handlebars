<div class="mb-5 pt-3">
    <a href="/dashboard/create/"><button id="create post" class="button is-primary is-pulled-right">Create a Post</button></a>

    <h2 class="title pb-4">My Dashboard</h2><hr>
{{#if posts.length}}
</div>

    {{#each posts as |post|}}
        {{> post-info post}}

            <a href="/dashboard/edit/{{post.id}}"><button class="button mb-5 ml-5 is-warning">Edit Post</button></a>
        </div>
    {{/each}}

{{else}}
<h5 class="pb-4 has-text-centered is-italic">You haven't posted yet!</h5>

{{/if}}